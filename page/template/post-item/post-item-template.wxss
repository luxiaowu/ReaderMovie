.post-item {
  border-bottom: 1px solid #ededed;
  margin-top: 20px;
  padding-bottom: 5px;
  display: flex;
  flex-direction: column;
}

.post-author-date {
  padding-left: 10px;
  margin-bottom: 10px;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 0 20rpx;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx; 
  padding: 0 20rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  padding-left: 32rpx;
  color: #666;
  margin-top: 20rpx;
}

.post-like image {
  width: 16px;
  height: 16px;
  margin-right: 5px;
  vertical-align: middle;
}

.post-like text {
  vertical-align: middle;
  margin-right: 20px;
}